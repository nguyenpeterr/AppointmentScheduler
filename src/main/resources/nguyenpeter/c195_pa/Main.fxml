<AnchorPane prefHeight="601.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <children>
        <Group>
            <children>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#d3eaff" height="620.0" opacity="0.5" stroke="BLACK" strokeType="INSIDE" strokeWidth="3.0" width="988.0" />
                <HBox layoutX="51.0" layoutY="508.0" prefHeight="30.0" prefWidth="903.0" spacing="30.0">
                    <children>
                        <Button fx:id="reportsButton" mnemonicParsing="false" onAction="#onReportsButton" text="Reports">
                     <padding>
                        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                     </padding></Button>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButton" text="Add" translateX="150.0">
                     <padding>
                        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                     </padding></Button>
                        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#onUpdateButton" text="Update" translateX="150.0">
                     <padding>
                        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                     </padding></Button>
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteButton" text="Delete" translateX="150.0">
                     <padding>
                        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                     </padding></Button>
                        <Button fx:id="logOutButton" alignment="CENTER" mnemonicParsing="false" onAction="#onLogOutButton" prefHeight="37.0" prefWidth="108.0" text="Log out" textAlignment="CENTER" translateX="280.0">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                     </padding>
                        </Button>
                    </children>
                </HBox>
                <HBox layoutX="559.0" layoutY="66.0" prefHeight="20.0" prefWidth="408.0" spacing="20.0">
                    <children>
                        <RadioButton fx:id="radioApptByMonth" mnemonicParsing="false" onAction="#onMonthToggle" prefHeight="18.0" prefWidth="114.0" selected="true" text="View by Month">
                     <toggleGroup>
                        <ToggleGroup fx:id="viewTG" />
                     </toggleGroup></RadioButton>
                        <RadioButton fx:id="radioApptByWeek" mnemonicParsing="false" onAction="#onWeekToggle" prefHeight="18.0" prefWidth="109.0" text="View by Week" toggleGroup="$viewTG" />
                        <RadioButton fx:id="radioAllAppt" mnemonicParsing="false" onAction="#onAllAppointmentsRadio" prefHeight="17.0" prefWidth="94.0" text="View All" toggleGroup="$viewTG" />
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </HBox>
                <HBox layoutX="424.0" layoutY="574.0" prefHeight="17.0" prefWidth="523.0" spacing="10.0">
                    <children>
                        <Label fx:id="yourTimeZoneLabel" text="Your Time Zone:" />
                        <Label fx:id="timeZone" text="Time Zone string" />
                        <Separator orientation="VERTICAL" prefHeight="200.0" />
                        <Label fx:id="serverTimeZoneLabel" text="Server Time Zone:" />
                        <Label fx:id="serverTimeZone" text="Server Time Zone string" />
                    </children>
                </HBox>
              <TableView fx:id="appointmentTableView" layoutX="2.0" layoutY="114.0" onMouseClicked="#onAppointmentTableViewClicked" prefHeight="365.0" prefWidth="981.0">
                  <columns>
                      <TableColumn fx:id="appointmentIdCol_a" editable="false" prefWidth="105.0" sortable="false" text="Appointment_ID" />
                      <TableColumn fx:id="titleCol_a" editable="false" prefWidth="70.0" sortable="false" text="Title" />
                      <TableColumn fx:id="descriptionCol_a" editable="false" prefWidth="130.0" sortable="false" text="Description" />
                      <TableColumn fx:id="locationCol_a" editable="false" prefWidth="81.0" sortable="false" text="Location" />
                      <TableColumn fx:id="contactCol_a" editable="false" prefWidth="78.0" sortable="false" text="Contact" />
                      <TableColumn fx:id="typeCol_a" editable="false" prefWidth="71.0" sortable="false" text="Type" />
                      <TableColumn fx:id="startCol_a" editable="false" minWidth="9.0" prefWidth="129.0" sortable="false" text="Start" />
                      <TableColumn fx:id="endCol_a" editable="false" prefWidth="128.0" sortable="false" text="End" />
                      <TableColumn fx:id="customerIdCol_a" editable="false" minWidth="0.0" prefWidth="82.0" sortable="false" text="Customer_ID" />
                      <TableColumn fx:id="userIdCol_a" editable="false" prefWidth="77.0" sortable="false" text="User_ID" />
                  </columns>
              </TableView>
            <HBox layoutX="49.0" layoutY="66.0" prefHeight="19.0" prefWidth="272.0" spacing="25.0">
               <children>
                  <RadioButton fx:id="radioViewAppt" mnemonicParsing="false" selected="true" text="View Appointments">
                     <toggleGroup>
                        <ToggleGroup fx:id="mainviewTG" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="radioViewcustomer" mnemonicParsing="false" onAction="#onViewCustomerToggle" text="View Customers" toggleGroup="$mainviewTG" />
               </children>
            </HBox>
            </children>
        </Group>
        <TableView fx:id="customerTableView" disable="true" layoutX="4.0" layoutY="50.0" onMouseClicked="#onCustomerTableViewClicked" prefHeight="365.0" prefWidth="952.0" visible="false">
            <columns>
                <TableColumn fx:id="customerIdCol_c" editable="false" sortable="false" text="Customer_ID" />
                <TableColumn fx:id="customerNameCol_c" editable="false" prefWidth="130.0" sortable="false" text="Customer_Name" />
                <TableColumn fx:id="addressCol_c" editable="false" prefWidth="160.0" sortable="false" text="Address" />
                <TableColumn fx:id="postalCodeCol_c" editable="false" prefWidth="91.0" sortable="false" text="Postal_Code" />
                <TableColumn fx:id="phoneCol_c" editable="false" prefWidth="98.0" sortable="false" text="Phone" />
                <TableColumn fx:id="createDateCol_c" editable="false" sortable="false" text="Create_Date" />
                <TableColumn fx:id="createdByCol_c" editable="false" minWidth="0.0" prefWidth="61.0" sortable="false" text="Created_By" />
                <TableColumn fx:id="lastUpdateCol_c" editable="false" prefWidth="65.0" sortable="false" text="Last_Update" />
                <TableColumn fx:id="lastUpdatedByCol_c" editable="false" prefWidth="103.0" sortable="false" text="Last_Updated_By" />
                <TableColumn fx:id="divisionIdCol_c" editable="false" prefWidth="83.0" sortable="false" text="Division_ID" />
            </columns>
        </TableView>
        <Group layoutX="4.0" layoutY="4.0" visible="false">
            <children>
                <Rectangle fx:id="appointmentRectangle" arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="51.0" stroke="BLACK" strokeType="INSIDE" width="952.0" />
                <Button fx:id="dismissRectangleButton" layoutX="852.0" layoutY="13.0" mnemonicParsing="false" onAction="#onDismissRectangleButton" text="Acknowledge" />
                <Label fx:id="rectangleLabel" blendMode="DARKEN" layoutX="14.0" layoutY="4.0" prefHeight="43.0" prefWidth="866.0" text="Label">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </Label>
            </children>
        </Group>
    </children>
</AnchorPane>
